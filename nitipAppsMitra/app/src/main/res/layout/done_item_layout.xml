<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="2dp"
        android:layout_margin="2dp">
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_baseline_done_24"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#009688"/>
                <TextView
                    android:padding="5dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#151414"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:text="Barang Tiba"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>




            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >



                <TextView
                    android:id="@+id/tv_done_item_nama_penerinma"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
                    android:textColor="#151414"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:gravity="left"
                    android:drawablePadding="5dp"
                    android:text="Di terima oleh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>
                <TextView
                    android:id="@+id/tv_done_item_tggal_diterima"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_date_range_24"
                    android:layout_marginBottom="10dp"
                    android:textColor="#151414"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:gravity="left"
                    android:drawablePadding="5dp"
                    android:text="Tanggal Diterima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>






            </LinearLayout>




        </LinearLayout>



    </androidx.cardview.widget.CardView>



</LinearLayout>